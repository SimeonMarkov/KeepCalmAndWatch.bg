<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://keepcalmandwatch.cvchgpyw9aph.eu-central-1.rds.amazonaws.com:3306/keepcalmandwatch" />
		<property name="username" value="root" />
		<property name="password" value="rootroot" />
	</bean>

	<bean id="DBUserDAO" class="com.example.model.dao.DBUserDAO">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="DBVideoDAO" class="com.example.model.dao.DBVideoDAO">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>

